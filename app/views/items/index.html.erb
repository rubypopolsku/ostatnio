<p style="color: green"><%= notice %></p>

<h1><%= @title %></h1>

<div id="items">
  <% @items.each do |item| %>
    <%= render item %>
    <p>
      <%= link_to "Show this item", item %>
    </p>
    <%= link_to "mark as done", mark_as_done_item_path(item) %>
    <hr/>
  <% end %>
</div>

<%= link_to "New item", new_item_path %>
